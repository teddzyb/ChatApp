<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChatApp.Pages.Tabbed.Conversation"
             xmlns:local="clr-namespace:ChatApp">
    
  <ContentView.Content>

        <Grid
            Padding="20"
            BackgroundColor="#f8f9fa"
            HorizontalOptions="FillAndExpand"
            RowSpacing="0"
            VerticalOptions="CenterAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label
                Grid.Row="0"
                Grid.Column="0"
                Text="User Name"
                FontSize="Medium" />

            <Label
                Grid.Row="0"
                Grid.Column="1"
                Text="X"
                FontSize="Medium"
                HorizontalOptions="End" />

            <Label
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                HorizontalTextAlignment="Center"
                Text="You can now start a conversation with this person."
                FontSize="Medium" />

            <StackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">

                <Grid
                    BackgroundColor="White"
                    ColumnSpacing="0"
                    RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                
                <Frame                    
                    Grid.Row="0"
                    Grid.Column="0"
                    Margin="0,20"
                    Padding="20,5"
                    BackgroundColor="Transparent"
                    BorderColor="#bdbdbd"
                    CornerRadius="30"
                    HorizontalOptions="Fill">
                    <local:CustomEntry
                        FontSize="Small"
                        Placeholder="Write your message here.."
                        WidthRequest="1000"/>
                </Frame>
                <ImageButton
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="5,0"
                    BackgroundColor="Transparent"
                    HeightRequest="25"
                    Source="search"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />

                </Grid>
            </StackLayout>

        </Grid>

    </ContentView.Content>
    
</ContentView>